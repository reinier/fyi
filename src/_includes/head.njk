<head>
    <meta charset="utf-8"/>
    <title>{{ title or metadata.title }}</title>
    <meta name="generator" content="Eleventy"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="description" content="{{ description or metadata.description }}"/>
    <link rel="stylesheet" href="{{ '/site.css' | url }}"/>
    <link rel="alternate" type="application/rss+xml" href="/feed.xml" title="FYI Blog"/>
    <link rel="alternate" type="application/rss+xml" href="/feed-newsletter.xml" title="FYI Nieuwsbrief"/>
    <link rel="icon" href="/favicon.ico" sizes="any"/>
    <link rel="icon" href="/icon.svg" type="image/svg+xml"/>
    <link rel="apple-touch-icon" href="/apple-touch-icon.png"/>
    <link rel="manifest" href="/manifest.webmanifest"/>
    <link rel="authorization_endpoint" href="https://indieauth.com/auth"/>
    <link rel="webmention" href="https://webmention.io/reinier.fyi/webmention"/>
    <link rel="pingback" href="https://webmention.io/reinier.fyi/xmlrpc"/>
    <meta property="og:title" content="{{ title }}"/>
    <meta property="og:url" content="{{ metadata.url }}{{ page.url }}"/>
    {% if description %}
        <meta property="og:description" content="{{ description }}"/>
    {% endif %}
    {% include './head-components/social-image.njk' %}
    <!-- Matomo -->
    <script>
        var _paq = window._paq = window._paq || [];
        /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
        _paq.push(['trackPageView']);
        _paq.push(['enableLinkTracking']);
        (function () {
            var u = "https://monocle.reinierladan.nl/";
            _paq.push([
                'setTrackerUrl',
                u + 'matomo.php'
            ]);
            _paq.push(['setSiteId', '1']);
            var d = document,
                g = d.createElement('script'),
                s = d.getElementsByTagName('script')[0];
            g.async = true;
            g.src = u + 'matomo.js';
            s.parentNode.insertBefore(g, s);
        })();
    </script>
    <!-- End Matomo Code -->
    <!-- Structured data -->
    {% if recipe %}
        <!-- Recipe data -->
        <script type="application/ld+json">
            {% include './head-components/recipe-sd.njk' %}
        </script>
    {% endif %}
    <!-- End structured data -->
</head>
