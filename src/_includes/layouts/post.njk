<!doctype html>
<html lang="nl">
    {% include '../head.njk' %}
    <body>
        {% include '../header.njk' %}
        <main>
            {% include '../site-intro.njk' %}
            <article class="single type-article">
                <h1>{{ title }}</h1>
                <p class="post-date">
                    {{ page.date | readablePostDate }} &nbsp;&nbsp;&nbsp;&nbsp;✍️
                    <a href="https://reinierladan.nl">Reinier Ladan</a>
                    {% if tags %}
                        <span class="tags">in 
                                {% for tag in tags -%}
                                    <a class="tag" href="/onderwerp/{{ tag }}">{{ tag }}</a>
                                {%- endfor %}
                        </span>
                    {% endif %}
                </p>
                {{ content | safe }}
            </article>
        </main>
        <!-- Current page: {{ page.url | url }} -->
        {% include '../footer.njk' %}
    </body>
</html>
